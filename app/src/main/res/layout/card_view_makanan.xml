<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/background"
    android:layout_marginVertical="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/nama_makanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:text="Makanan ABCDE"
                android:layout_weight="8"
                android:gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_weight="1">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/waktu_makan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/chip_orange"
                    android:textColor="@color/orange"
                    android:textSize="12sp"
                    app:cornerRadius="10dp"
                    tools:text="Makan Malam"
                    android:layout_weight="1"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/trimester"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/chip_purple"
                    android:textColor="@color/young_purple"
                    android:textSize="12sp"
                    app:cornerRadius="10dp"
                    tools:text="Trimester 1"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/gambar_makanan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            tools:src="@drawable/arrow_back"
            android:layout_margin="10dp"/>
    </LinearLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>