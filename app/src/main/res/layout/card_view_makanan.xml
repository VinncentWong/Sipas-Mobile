<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/background"
    android:layout_marginVertical="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/gambar_makanan"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.507"
        tools:src="@drawable/arrow_back" />

    <TextView
        android:id="@+id/nama_makanan"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.292"
        tools:text="Makanan ABCDE" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/waktu_makan"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/chip_orange"
        android:textColor="@color/orange"
        android:textSize="8sp"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nama_makanan"
        tools:text="Makan Malam" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/trimester"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:backgroundTint="@color/chip_purple"
        android:textColor="@color/young_purple"
        android:textSize="8sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gambar_makanan"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toEndOf="@+id/waktu_makan"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.866"
        tools:text="Trimester 1" />
</androidx.constraintlayout.widget.ConstraintLayout>